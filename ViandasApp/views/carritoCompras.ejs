<%- include('./partials/head')%>

<body>
    <%- include('./partials/header')%>
    
    <main class="main-container">
        <form action="/carritoPost" class="main-form" method="post">
            <div class="form-header">
                <h2 class="form-title">Carrito de Compras</h2>
                <i class="fa-solid fa-square-xmark"></i>
            </div>
            <div class="product-detail">
                <div class="title">
                    <h4 class="product">PRODUCTO</h4>

                </div>
                <div class="food-selected">
                    <img
                        src="//d3ugyf2ht6aenh.cloudfront.net/stores/001/720/855/products/ttl_9421-21-6863c16af79cfb323816500425432068-320-0.jpg">
                    <div class="food-info">
                        <h4>Vianda de Pollo</h4>
                        <p>Vianda de pollo con arroz y ensalada</p>

                        <div class="price">
                            <p>ARS 630.00</p><i class="fa-solid fa-trash-can"></i>
                        </div>
                        <div class="unit">
                            <i class="fa-regular fa-square-minus"></i>
                            <p>1 unidad</p>
                            <i class="fa-regular fa-square-plus"></i>
                        </div>
                    </div>

                </div>
                <div class="bottom-subtotal">
                    <H4 class="subtotal">SUBTOTAL(Sin envio)</H4>
                    <p class="subtotal-price">ARS 630.00</p>
                </div>
                <div class="medio-envios">
                    <div class="delivery">
                        <i class="fa-solid fa-truck"></i>
                        <p class="envios">Seleccione Direcci√≥n Entrega</p>
                    </div>
                    <select name="Address-delivery" id="Address-delivery">
                        <option value="dir1">Peru 364 , CABA</option>
                        <option value="dir2">Av. Corrientes 1234 , CABA</option>
                    </select>
                </div>
                <div class="bottom-deliveryCost">
                    <H4 class="subtotal">Costo Envio</H4>
                    <p class="subtotal-price">ARS 80.00</p>
                </div>
                <div class="bottom-total">
                    <H4 class="total">Costo Total</H4>
                    <h4     class="total-price">ARS 710.00</h4>
                </div>
            </div>
            <div class="buttom-submit">
                <button type="submit">Confirmar Compra</button>
            </div>

        </form>
    </main>











</body>
<%- include('./partials/footer')%>